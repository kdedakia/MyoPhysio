<Window x:Class="MyoPysioProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>

        <TextBlock Name="statusText" HorizontalAlignment="Left" Margin="0,100,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="110" Width="160" Grid.Row="1"/>
        <Image HorizontalAlignment="Left" Height="245" Margin="165,0,0,0" VerticalAlignment="Top" Width="342" Grid.RowSpan="2"/>
        <ListBox Name="exerciseSelect" HorizontalAlignment="Left" Height="75" Margin="165,235,0,0" Grid.Row="1" VerticalAlignment="Top" Width="352" SelectionChanged="ListBox_SelectionChanged_1">
            <ListBoxItem>Mike</ListBoxItem>
            <ListBoxItem>Lisa</ListBoxItem>
            <ListBoxItem>John</ListBoxItem>
            <ListBoxItem>Mary</ListBoxItem>
        </ListBox>

    </Grid>
</Window>
